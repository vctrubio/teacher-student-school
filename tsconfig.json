{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": false, // Disable strict mode to avoid implicit any errors
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src" // Point to your source files
  },
  "include": [
    "src/**/*"
  ], // Include all files in src/
  "exclude": [
    "node_modules"
  ]
}
